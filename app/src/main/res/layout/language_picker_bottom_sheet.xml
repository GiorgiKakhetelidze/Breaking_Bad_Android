<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="240dp"
    android:background="@drawable/bottom_sheet_background">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/langBtnGeo"
        android:layout_width="@dimen/language_btn_dimen"
        android:layout_height="@dimen/language_btn_dimen"
        android:layout_marginEnd="32dp"
        android:background="@null"
        android:src="@drawable/ic_flag_geo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/langBtnEng"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/langBtnEng"
        android:layout_width="@dimen/language_btn_dimen"
        android:layout_height="@dimen/language_btn_dimen"
        android:background="@null"
        android:src="@drawable/ic_flag_uk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/langBtnGeo"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>