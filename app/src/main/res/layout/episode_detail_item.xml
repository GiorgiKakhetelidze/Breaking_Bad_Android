<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black">

    <ImageView
        android:id="@+id/savedCharItemView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="179dp"
        android:layout_height="265dp"
        android:contentDescription="@string/img_description"
        android:scaleType="center" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/savedCharacterNameTextView"
        style="@style/Action_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/savedCharItemView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/saved_char_horizon_margin" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/savedCharacterNickNameTextView"
        style="@style/Action_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/savedCharItemView"
        app:layout_constraintTop_toBottomOf="@+id/savedCharacterNameTextView"
        tools:text="NICKNAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/saved_char_horizon_margin"
        android:layout_marginTop="1dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/savedCharacterPortrayedTextView"
        style="@style/Text_Portrayed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/savedCharItemView"
        app:layout_constraintTop_toBottomOf="@+id/savedCharacterNickNameTextView"
        tools:text="By\nName Surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/saved_char_horizon_margin"
        android:layout_marginTop="1dp"
        android:gravity="center" />

</androidx.constraintlayout.widget.ConstraintLayout>