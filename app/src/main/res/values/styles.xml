<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button_AddRemove">
        <item name="android:layout_width">@dimen/add_remove_button_width</item>
        <item name="android:layout_height">@dimen/add_remove_button_height</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="Action_text" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Register_text" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Login_Register_Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="Tab" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="Tab.Active">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Tab.Inactive">
        <item name="android:textColor">@color/nav_bar_btn_grey</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Text_Name" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">27sp</item>
    </style>

    <style name="Text_Description" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text_Season" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/season_episode_name</item>
        <item name="fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text_Title" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">37sp</item>
    </style>

    <style name="Edit_Text" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/input_background</item>
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:paddingStart">@dimen/edit_text_padding</item>
        <item name="android:paddingEnd">@dimen/edit_text_padding</item>
        <item name="android:textColor">@color/gray_input_text</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="login_screen_have_acc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textColor">@color/gray_hav_acc</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="login_screen_register">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Back_Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">@dimen/back_btn_pad_btw_icon</item>
        <item name="android:drawableLeft">@drawable/ic_back_button</item>
    </style>

    <style name="Lang_Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawableLeft">@drawable/ic_global</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

    <style name="LogOut_Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawableLeft">@drawable/ic_logout_2</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

    <style name="Text_Portrayed">
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textColor">@color/quote_text_color</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorBackground">@color/gray_input</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorAccent">@color/orange</item>
    </style>

    <style name="Episode_Num_Text">
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/season_episode_name</item>
    </style>
</resources>